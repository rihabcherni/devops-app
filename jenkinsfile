pipeline {
    agent any

    environment {
        SHARED_VOLUME = "C:\\Nouvarch\\shared_volume" // Chemin Windows
    }

    stages {
        stage('Setup') {
            steps {
                script {
                    // Vérifier que Docker est installé et fonctionnel
                    echo 'Setting up the environment...'
                }
            }
        }
        stage('Build Docker Images') {
            steps {
                echo 'Building Docker Images...'
                bat 'docker-compose -f docker-compose.yml build'
            }
        }
        stage('Run Tests') {
            steps {
                echo 'Running unit tests...'
                bat """
                    docker run --rm -v %WORKSPACE%\\svm_service:/app devops-app/svm-service:latest ^
                        python -m unittest discover -s /app/tests -p "*.py"
                """
            }
        }
        stage('Start Services') {
            steps {
                echo 'Starting all services...'
                bat 'docker-compose -f docker-compose.yml up -d'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying application...'
                // Ajouter ici la stratégie de déploiement (e.g., Kubernetes ou serveur distant)
            }
        }
    }
    post {
        always {
            echo 'Cleaning up...'
            bat 'docker-compose -f docker-compose.yml down'
        }
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Please check the logs.'
        }
    }
}
