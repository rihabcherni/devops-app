pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                script {
                    sh 'docker-compose build'
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    sh 'docker-compose up -d'
                    // Add tests to verify service responses
                    // For example, call endpoints and check responses
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    // Deployment steps (e.g., to a remote server)
                }
            }
        }
    }
    post {
        always {
            script {
                sh 'docker-compose down'
            }
        }
    }
}
